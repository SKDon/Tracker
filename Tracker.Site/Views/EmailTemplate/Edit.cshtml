@using Tracker.Mvc
@using Tracker.MvcHelpers.Extensions
@using Tracker.Utilities.Localization
@using Resources
@model Tracker.ViewModels.EmailTemplate.EventTemplateModel
<div class="container-edit">
	<p>
		@Html.ActionLink(Pages.Help, MVC.EmailTemplate.Help(), new { @class = "pull-right", target = "balnk" })
		<b>
			@Pages.Event - @Model.EventType.ToLocalString()
		</b>
	</p>
	@Html.EditPage(Url.Action(MVC.EmailTemplate.Edit()), Pages.Save)
</div>
@section scripts
{
	@Scripts.Render(JsPaths.TemplateEditJs)
}
